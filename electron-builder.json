{
  "appId": "app.lovable.excel-life-sync",
  "productName": "Excel Life Sync",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "public/app-icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "darkModeSupport": true
  },
  "dmg": {
    "title": "${productName}",
    "icon": "public/app-icon.png"
  },
  "win": {
    "icon": "public/app-icon.png",
    "target": "nsis"
  },
  "linux": {
    "icon": "public/app-icon.png",
    "target": "AppImage"
  }
}
